@{
}
@model PaginationResponse<IEnumerable<ManagerModel>>;

<div class="container">
	<div class="d-flex align-items-center justify-content-between mb-0">
		<h1 id="new-name">Managers</h1>

		<span style="font-size: 3em;">
			@*<i class='bx bx-user-plus'></i>*@
			

			<a href="/Admin/AllManagersRequests" class="btn blue__bg text-light">
				Requests
			</a>
            
		</span>
	</div>

	<div class="d-flex flex-row m-0 big-card flex-sm-column flex-lg-row" style="width:95%; height:95%; margin-right:30px">
		<div class="col-md-6"  >
			<div class="card" style="height:100%;">
				<div class="card-body card-description">
					<div class="d-flex align-items-center mb-4">
						<img class="card-image" src="@ViewBag.SingleManager.Avatar" alt="male">

						<div style="margin-left:10px;"><p>@ViewBag.SingleManager.FirstName &nbsp @ViewBag.SingleManager.LastName<br /><small>@ViewBag.SingleManager.Age, &nbsp @ViewBag.SingleManager.Gender</small></p></div>
					</div>
					<p class="card-subtitle mb-2 text-muted">Company: @ViewBag.SingleManager.CompanyName</p>
					<p class="card-subtitle mb-2 text-muted">Mobile: @ViewBag.SingleManager.BusinessPhone</p>
					<p class="card-subtitle mb-2 text-muted">Email: @ViewBag.SingleManager.BusinessEmail</p>
					<p class="card-subtitle mb-2 text-muted">Address: @ViewBag.SingleManager.CompanyAddress, @ViewBag.SingleManager.State</p>
				</div>
			</div>
		</div>

		<div class="col-md-6"  style="margin-left: 20px; width: 55%; height: 100%;">
			<div class="card" style=" margin-bottom: 12px;">
				<div class="card-body d-flex flex-column">
					<p class="card-subtitle mb-2 text-muted" style="margin-left:50px">Additional Records</p>
					<div class="d-flex justify-content-between">
						<div style="margin-left:50px">
							<div>
								<small class="card-subtitle mb-2 text-muted">Date joined</small>
								<p class="card-subtitle mb-2 text-muted">@ViewBag.SingleManager.CreatedAt.ToShortDateString()</p>
							</div>

							<div>
								<small class="card-subtitle mb-2 text-muted">ManagerID</small>
								<p class="card-subtitle mb-2 text-muted">@ViewBag.SingleManager.ManagerId</p>
							</div>
						</div>

						<div style="margin-right:100px;">
							<div>
								<small class="card-subtitle mb-2 text-muted">Last Updated</small>
								<p class="card-subtitle mb-2 text-muted">@ViewBag.SingleManager.UpdatedAt.ToShortDateString()</p>
							</div>
							<div> 
								<small class="card-subtitle mb-2 text-muted">Total Hotels</small>
								<p class="card-subtitle mb-2 text-muted">@ViewBag.SingleManager.TotalHotels</p>
							</div>
						</div>
					</div>
				</div>
			</div>

			<div class="card" style="">
				<div class="card-body">
					<p class="card-subtitle mb-2 text-muted" style="margin-left:50px">Total Amount Generated</p>
					<h3 class="card-subtitle mb-2 text-muted" style="margin-left:50px">@ViewBag.SingleManager.TotalAmount</h3>
				</div>
			</div>
		</div>
	</div>

	<div class="container p-1 mt-2">
		<div class="bg-white p-5">
			<table class="table table-striped table-bordered shadow rounded caption-top">
				<caption>
					<div class="w-100 d-flex justify-content-between">
						<div class="">
							<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill: rgba(0, 0, 0, 1);"><path d="M7 11h10v2H7zM4 7h16v2H4zm6 8h4v2h-4z"></path></svg>
						</div>
						<div>    
							<input class="form-control me-2 search" type="search" placeholder="search" aria-label="Search">
						</div>

						</div>
					</caption>
				<thead>
					<tr class="text-muted">
						<th class="col">Manager Name</th>
						<th class="col">Hotel</th>
						<th class="col">Phone</th>
						<th class="col">...</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var managerr in Model.PageItems)
					{
							<tr>
								<td class="hotel-name col">
								@managerr.FirstName &nbsp @managerr.LastName <br />
									<span class="hotel-id mt-2">@managerr.ManagerId</span>
								</td>
								<td class="hotel-description col">
									Lorem ipsum dolor sitamet, consecteur
								</td>
								<td class="col">@managerr.BusinessPhone</td>
								<td class="col">
									<a asp-controller="Admin" asp-action="AllManagers" asp-route-managerId=@managerr.ManagerId class="btn btn-sm blue__bg text-light" role="button">View</a>
								</td>
							</tr>
					}
				</tbody>
			</table>
			@*<nav aria-label="Page navigation example">
				<ul class="pagination" style="float:right">
				<li class="page-item"><a class="page-link" href="#">Previous</a></li>
				<li class="page-item"><a asp-controller="Admin" asp-action="AllManagers" asp-route-pageMumber="1" class="page-link">1</a></li>
				<li class="page-item"><a asp-controller="Admin" asp-action="AllManagers" asp-route-pageMumber="2" class="page-link">2</a></li>
				<li class="page-item"><a asp-controller="Admin" asp-action="AllManagers" asp-route-pageMumber="1" class="page-link">3</a></li>
				<li class="page-item"><a class="page-link" href="#">Next</a></li>
				</ul>
				</nav>*@
		</div>
	</div>
	<div class="col-10 mx-auto mb-5 d-flex justify-content-center">
        <nav aria-label="Pagination">
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= Model.NumberOfPages; i++)
                {
                    if (i == Model.CurrentPage)
                    {
                        <li class="page-item active" aria-current="page">
                            <span class="page-link" asp-route-pageNumber=@i style="background-color: #2067A1; border-color: #2067A1; ">@i</span>
                        </li>
                    }
                    else
                    {
                        <li class="page-item"><a class="page-link"  asp-route-pageNumber=@i style="color:black" a>@i</a></li>
                    }
                }
            </ul>
        </nav>
    </div>
</div>
