@model List<HotelBasicView>
@{

}
<link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
<style>
	.hotelList {
		display: flex;
		padding: 1.5em;
		flex-flow: column;
		margin-bottom: 1em;
	}

	.hotel-card {
		display: flex;
		flex-flow: row;
		flex-wrap: wrap;
		background: #ffffff;
		margin-bottom: 1em;
	}

	.hotel-details, .h-rating {
		display: flex;
		align-items: center;
		padding: 0;
	}

	.hotel-rating {
		padding: 1em;
		flex-flow: end;
		height: fit-content;
	}

	.hotel-img {
		padding: 1em;
	}

	.h-rating {
		justify-content: end;
	}

	.comment {
		font-size: 14px;
		text-align: right;
	}

	.review-count {
		font-size: 12px;
	}

	.details {
		padding-left: 1em;
		border-left: 1px solid #2067A1;
	}

		.details h2 {
			font-size: 24px;
			color: #2067A1;
		}

	.review {
		margin-right: 10px;
	}

	.rating {
		background: #2067A1;
		color: #ffffff;
		width: 35px;
		height: auto;
		padding: 0.25em;
		text-align: center;
		border-radius: 0.25em 0.25em 0.25em 0;
	}

	.stars {
		color: #FFDF00;
	}
</style>
<div class="hotelList">
	<div class="w-100">
		<div class="row p-3" style="background-color: #F6FCFF; border-bottom: 1px solid #aaa;">
			<div class="col">
				<h2 style="color: #173752;">Listing</h2>
			</div>
			<div class="col col-lg-2" style="display: flex; justify-self: start;">
				<p class="me-2" style="color: #173752; font-size: 13px">Sort by</p>
				<select name="" id="" style="width: 120px; border-radius: 5px; height: 30px; outline: none;">
				</select>
			</div>
		</div>


		<div class="row m-3 d-flex justify-content-between">
			<div class="col-sm-6 mb-2 col-md-6 col-lg-6 d-flex justify-content-left">
				<div class="d-flex justify-content-between">
					<button style="border: #2067A1 1px solid; color: #2067A1;" type="button" class="btn btn-outline-primary">All</button>
					<button style="border: #2067A1 1px solid; color: #2067A1;" type="button" class="btn btn-outline-primary">Hotel</button>
				</div>
				<button style="border: #2067A1 1px solid; color: #2067A1;" type="button" class="btn btn-outline-primary">House/Apartment</button>
			</div>
			<div class="col-sm-12 col-md-6 col-lg-6 d-flex justify-content-end">
				<div class="d-flex justify-content-between">
					<button style="border: #2067A1 1px solid; color: #2067A1; text-wrap:none;" type="button" class="btn btn-outline-primary">Top picks</button>
					<button style="border: #2067A1 1px solid; color: #2067A1; text-wrap:none;" type="button" class="btn btn-outline-primary">Stars(highest first)</button>
				</div>
				<button style="border: #2067A1 1px solid; color: #2067A1; text-wrap:none" type="button" class="btn btn-outline-primary">Starts(lowest first)</button>

			</div>
		</div>
	</div>
	@foreach (var hotel in @Model)
	{
		var address = hotel.Address + ", " + hotel.City + ", " + hotel.State;
		<div class="hotel-card d-flex row">
			<div class="col-sm-12 col-md-3 hotel-img">
				<img class="img img-fluid rounded-start" src=@hotel.FeaturedImage />
			</div>
			<div class="hotel-details col-sm-12 col-md-7">
				<div class="details">
					<h2>@hotel.Name</h2>
					<p>@address</p>
					<p>@hotel.Description</p>
					<span class="stars">
						@for (int i = 1; i < hotel.Rating; i++)
						{
							<i class="fa fa-star"></i>
						}
					</span>
				</div>
			</div>
			<div class="hotel-rating pr-0 col-sm-12 col-md-2">
				<div class="h-rating m-0 p-0">
					<span class="review">
						<p class="comment m-0">@hotel.Comment</p>
						<p class="review-count m-0"><em>@hotel.NumberOFRatings reviews</em></p>
					</span>
					<span class="rating m-0">
						<span>@hotel.Rating</span>
					</span>
				</div>
			</div>
		</div>
	}

	<div class="col-10 mx-auto mb-5 d-flex justify-content-center">
		<nav aria-label="Page navigation example">
			<ul class="pagination">
				<li class="page-item">
					<a class="page-link" href="#" aria-label="Previous">
						<span aria-hidden="true">&laquo;</span>
					</a>
				</li>
				<li class="page-item"><a class="page-link" asp-route-pageNumber=1>1</a></li>
				<li class="page-item"><a class="page-link" asp-route-pageNumber=2>2</a></li>
				<li class="page-item"><a class="page-link" asp-route-pageNumber=3>3</a></li>
				<li class="page-item">
					<a class="page-link" href="#" aria-label="Next">
						<span aria-hidden="true">&raquo;</span>
					</a>
				</li>
			</ul>
		</nav>
	</div>
</div>

