@{
	ViewData["Title"] = "Home Page";
}

<div class="text-center">
	<h1 class="display-4">Welcome</h1>
	<p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div>
	<form enctype="multipart/form-data" method="post" asp-controller="home" asp-action="TestApi">
		<div class="form-group mb-3">
			<label for="formFilesm" class="form-label">Payment Proof <em>(only images in ".jpg", ".png", ".jpeg" are accepted)</em> </label>
			<input class="form-control form-control-sm w-50 h-100" name="file" id="formFilesm" type="file" />
		</div>
		<div class="form-group">
			<button class="btn btn-success p-2" type="submit">Upload</button>
		</div>
	</form>

</div>

