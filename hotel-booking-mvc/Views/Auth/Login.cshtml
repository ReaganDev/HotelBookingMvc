@model hotel_booking_model.AuthModels.LoginModel

@{
    ViewData["Title"] = "Login";
}


<div class="container-fluid m-0 p-0">
    <div class="row p-0 m-0">
        <div class="col-lg-5 col-md-5 d-none d-sm-none d-sm-flex d-md-flex d-lg-flex m-0 p-0">
            <img src="~/images/Login.png" alt="login" class="img-fluid" />
        </div>


        <div class="col-sm-12 col-lg-7 mt-sm-4">

            <div class="container">
                <div class="row mx-auto justify-content-center mt-5">
                    <div class="col-sm-12 col-lg-6">
                        <div class="card">
                            <div class="card-body">
                                @using (Html.BeginForm("Login", "Auth", FormMethod.Post, new { novalidate = "true", @class = "needs-validation" }))
                                {
                                    <form asp-action="Index">
                                        <div class="form-group mb-2">
                                            <input name="Email" class="form-control" placeholder="Email" required />
                                            <span name="Email" class="text-danger"></span>
                                        </div>
                                        <div class="form-group mb-2">
                                            <input name="Password" class="form-control" placeholder="Password" required />
                                            <span name="Password" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <input asp-controller="Auth" asp-action="Login"
                                                   type="submit" value="login" class="btn btn-primary form-control btn-block" />
                                        </div>

                                    </form>

                                }


                                <div class="form-group m-4">
                                    <a href="" p-2>Forgot Password</a>
                                    <a href="" p-2>Register</a>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

