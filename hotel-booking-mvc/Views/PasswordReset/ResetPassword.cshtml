@*@model*@
@{ ViewData["Title"] = "Reset Password";
    Layout = "_RecoverPasswordLayout"; }
<div class="mx-auto my-auto content-area">
    <img src="~/images/Locked - Security.svg" class="img-fluid" alt="Security icon" />
    <p class="text-center recovery-instruction">
        Please create a new password to login.
    </p>
    <form class="form" method="post" asp-action="">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="New Password" required/>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Re-enter New Password" required/>
        </div>
        <button type="submit" class="btn btn-block btn-lg">Change Password</button>
    </form>

</div>