@*@model*@
@{ ViewData["Title"] = "Forgot PassWord";
    Layout = "_RecoverPasswordLayout"; }
<div class="mx-auto my-auto content-area">
    <img src="~/images/Searching - Looking.svg" class="img-fluid" alt="Search icon" />
    <p class="text-center recovery-instruction">
        Enter your registered email to get a token that would
        be needed to reset your password in the next step.
    </p>
        <form class="form" method="post" asp-action="">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Email: example@email.com" required />
            </div>
            <button type="submit" class="btn btn-block btn-lg">Send Code</button>
            <p class="text-center recovery-instruction mt-4"><small>Check your mail for a recovery code.</small></p>
        </form>
</div>